{
  "name": "@ambientcss/css",
  "version": "0.1.0",
  "description": "Pure CSS ambient lighting and skeuomorphic utility classes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikkupico/ambientcss.git",
    "directory": "packages/ambient-css"
  },
  "homepage": "https://kikkupico.github.io/ambientcss/",
  "bugs": {
    "url": "https://github.com/kikkupico/ambientcss/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "development": "./src/ambient.css",
      "default": "./dist/ambient.css"
    },
    "./ambient.css": {
      "development": "./src/ambient.css",
      "default": "./dist/ambient.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ../../scripts/build-css.mjs src/ambient.css dist/ambient.css",
    "clean": "rm -rf dist",
    "typecheck": "echo \"No typecheck for CSS package\""
  },
  "devDependencies": {
    "lightningcss": "^1.30.1"
  }
}
