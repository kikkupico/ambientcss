{
  "name": "@ambientcss/components",
  "version": "1.0.1",
  "description": "React skeuomorphic components powered by Ambient CSS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikkupico/ambientcss.git",
    "directory": "packages/ambient-components"
  },
  "homepage": "https://kikkupico.github.io/ambientcss/",
  "bugs": {
    "url": "https://github.com/kikkupico/ambientcss/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": {
      "development": "./src/styles.css",
      "default": "./dist/styles.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cp src/styles.css dist/styles.css",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.3.0 || ^19.0.0",
    "react-dom": "^18.3.0 || ^19.0.0"
  },
  "dependencies": {
    "@ambientcss/css": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "tsup": "^8.3.6",
    "typescript": "^5.8.2"
  }
}
